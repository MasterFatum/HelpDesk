@model MvcLesson.Models.HelpDeskRequest

@{
    Layout = null;
    Random random = new Random();
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Форма заявки</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Styles.css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
</head>
<body>
<div class="panel-success">
    <div class="panel-heading text-center">
        <h4>@Html.ActionLink("На главную страницу", "Index")</h4>
        <h3>Форма обращение HelpDesk</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        <div class="form-group" align="center">
            <label>ID заявки:</label>
            <input type="text" name="@Html.NameFor(m => m.HelpDeskId)" value="@ViewBag.ID" class="form-control" style="width:295px" disabled="disabled"/>
        </div>

        <div class="form-group" align="center">
            <label>Фамилия Имя Отчество:</label>
            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", style = "width:500px" })
        </div>

        <div class="form-group" align="center">
            <label>Ваш адрес электронной почты (E-mail):</label>
            @Html.TextBoxFor(x => x.UserEmail, new { @class = "form-control", style = "width:500px" })
        </div>

        <div class="form-group" align="center">
            <label>Ваш контактный номер телефона:</label>
            @Html.TextBoxFor(x => x.UserPhone, new { @class = "form-control", style = "width:500px" })
        </div>

        <div class="form-group" align="center">
            <label>Ваш номер кабинета или название объекта:</label>
            @Html.TextBoxFor(x => x.UserLocation, new { @class = "form-control", style = "width:500px" })
        </div>

        <div class="form-group" align="center")>
            <label>Приоритет заявки:</label>
            @Html.DropDownListFor(x => x.Priority, new[] {
                new SelectListItem() { Text = "СРОЧНО", Value = Boolean.TrueString},
                new SelectListItem() { Text = "НЕ СРОЧНО", Value = Boolean.FalseString}
            }, "Выберите вариант", new { @class = "form-control", style = "width:500px" })
        </div>

        <div class="form-group" align="center">
            <label>IT-отдел:</label>
            @Html.DropDownListFor(x => x.Department, new[] {
                new SelectListItem() { Text = "Академия"},
                new SelectListItem() { Text = "Школа"},
                new SelectListItem() { Text = "Футбольный клуб"}
            }, "Выберите вариант", new { @class = "form-control", style = "width:500px" })
        </div>

        <div class="form-group" align="center">
            <label>Опишите проблему:</label>
            @Html.TextBoxFor(x => x.BodyEmail, new { @class = "form-control", style = "height:200px" })
        </div>
        <div class="text-center">
            <input type="submit" value="Отправить HelpDesk" class="btn btn-success" style="font-size: large" />
        </div>
}
    </div>
</div>
</body>
</html>