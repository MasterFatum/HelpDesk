@model MvcLesson.Models.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    @Html.ActionLink("Назад", "Index", "Home");
    <meta name="viewport" content="width=device-width" />
    <title>Вход</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet"/>
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet"/>
    <style>
        .btn a {
            color: white;
            text-decoration: none;

        }

        body {
            background-color: #F1F1F1;
        }
    </style>
</head>
<body>
<div class="panel-success">
    <div class="panel-heading text-center">
        <h3>Вход в системную панель HelpDesk</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="form-group" align="center">
                <label>Логин:</label>
                @Html.TextBoxFor(x => x.AdminName, new { @class = "form-control", style = "width:500px" })
            </div>

            <div class="form-group" align="center">
                <label>Пароль:</label>
                @Html.EditorFor(x => x.AdminPassword, new { @class = "form-control", style = "width:500px" })
            </div>

            <div class="text-center">
                <input type="submit" value="Войти" class="btn btn-success" style="font-size: large" />
            </div>
        }
    </div>
</div>
</body>
</html>
